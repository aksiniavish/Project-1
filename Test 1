class Teacher:
    def __init__(self, name, subject, teaches="10–ù"):
        self.name = name
        self.subject = subject
        self.teaches = teaches

    def __str__(self):
        return f"Teacher: {self.name}, teaches {self.subject}."

    def flex(self, other):
        if self.teaches == other.teaches:
            print(f"Our students like me more, {other.name}.")
        else:
            print(f"All my students get A's")


class Student:
    def __init__(self, name, gender="M", grade="10", letter="H", is_taken=False, fav_subject=None):
        self.name = name
        self.grade = grade
        self.letter = letter
        self.fav_subject = fav_subject
        self.fav_teacher = None
        self.is_taken = is_taken
        self.significant_other = "Not taken"
        self.gender = gender

    def __str__(self):
        return f"Student: {self.name} from {self.grade}{self.letter}."

    def greet(self):
        print(f"{self.name} from {self.grade}{self.letter} says hi!")

    def boast(self):
        print(f"My favorite subject is {self.fav_subject}!")

    def date(self, other):
        if self.gender == other.gender:
            print("Relationship prohibited.")
        else:
            if not self.is_taken and not other.is_taken:
                self.is_taken = True
                self.significant_other = other
                other.is_taken = True
                other.significant_other = self
                print(f"{self.name} and {other.name} are dating!")
            else:
                print("Break up first!")

    @staticmethod
    def bully_s(other):
        if not other.is_taken:
            print(f"You're a single loser, {other.name}!")
        else:
            print(f"Hard to believe someone would date you, {other.name}")

    def bully_c(self, other):
        if self.letter == other.letter:
            print(f"We're a better class than {other.name}'s!")
        else:
            print(f"Your class sucks, {other.name}!")


teacher1 = Teacher("Mrs. Bottle", "Math")
teacher2 = Teacher("Mr. Plant", "English")

student1 = Student("Cactus")
student2 = Student("Vacuum", is_taken=True, letter="O")


print(teacher1)
print(teacher2)
teacher1.flex(teacher2)

