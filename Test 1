class Human:

    def __init__(self, name, gender="M", grade="10", letter="H", is_taken=False):
        self.name = name
        self.grade = grade
        self.letter = letter
        self.fav_subject = "chemistry"
        self.fav_teacher = None
        self.is_taken = is_taken
        self.significant_other = "Not taken"
        self.gender = gender

    def __str__(self):
        return f"Human: {self.name} {self.grade} {self.letter}"

    def greet(self):
        print(f"{self.name} from {self.grade}{self.letter} says hi!")

    def boast(self):
        print(f"My favorite subject is {self.fav_subject}!")

    def date(self, other):
        if self.gender == other.gender:
            print("Relationship prohibited.")
        else:
            if not self.is_taken and not other.is_taken:
                self.is_taken = True
                self.significant_other = other
                other.is_taken = True
                other.significant_other = self
                print(f"{self.name} and {other.name} are dating!")
            else:
                print("Break up first!")


classmate1 = Human("Cactus")
classmate2 = Human("Vacuum", is_taken=True)

# classmate1.boast()
# classmate1.greet()
# classmate1.date(classmate2)
